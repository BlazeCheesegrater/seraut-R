Bootstrap: docker
From: rocker/tidyverse:latest

%labels
    Maintainer CCR
    Version v1.0

%post
    ## Install required Linux packages
    apt-get update && apt-get install -y \
        
        ## Insert dependencies and packages for your specific use case here.

        && apt-get clean

    ## Install dependencies in R (from CRAN)
    Rscript -e "install.packages(c(''))"

    ## Optional: Install packages from other maintainers
    ## Rscript -e "BiocManager::install(c('SingleCellExperiment', 'scater', 'scran', 'biomaRt'))"
    
    print(R.version.string)

%environment
    export R_LIBS_USER=/usr/local/lib/R/site-library
    export PATH=/usr/local/bin:$PATH

%runscript
    echo "Launching R..."
    exec R
